---
import ToggleThemeButton from './ToggleThemeButton.astro';
import { Image } from 'astro:assets';
import IconImage from '../images/icon.png';
---

<header>
  <div class="container">
    <Image src={IconImage} alt="subaru" width="32" height="32" class="icon" />
    <h1>subaru</h1>
    <div class="spacer"></div>
    <ToggleThemeButton />
  </div>
</header>

<style>
  header {
    position: fixed;
    width: 100%;
    backdrop-filter: blur(4px);
    color: var(--text-color);
  }
  .container {
    max-width: 800px;
    display: flex;
    align-items: center;
    margin: 0 auto;
    padding: 12px 16px;
  }
  .icon {
    margin: 8px;
  }
  h1 {
    font-size: 1.4rem;
    line-height: 1;
    font-weight: 400;
    margin-left: 8px;
  }
  .spacer {
    flex-grow: 1;
  }
</style>
