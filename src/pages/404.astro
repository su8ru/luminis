---
import { Image } from 'astro:assets';
import Page from '../layouts/Page.astro';
import icon404 from '../images/icon_404.png';
import Back from '../components/Back.astro';
---

<Page title="404 Not Found">
  <div class="container">
    <Image
      src={icon404}
      alt="404 Not Found"
      width="230"
      densities={[1, 2, 3]}
    />
    <h2>Page Not Found</h2>
    <p>ページが見つかりませんでした。</p>
    <Back href="/">ホームに戻る</Back>
  </div>
</Page>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  h2 {
    font-size: 2rem;
  }
  p {
    margin-bottom: 32px;
  }
</style>
